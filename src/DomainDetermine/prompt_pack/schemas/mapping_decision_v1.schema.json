{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Mapping Decision",
    "type": "object",
    "required": [
        "concept_id",
        "confidence",
        "evidence"
    ],
    "properties": {
        "concept_id": {
            "type": "string",
            "minLength": 1
        },
        "confidence": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
        },
        "evidence": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1
            },
            "minItems": 1
        },
        "notes": {
            "type": "string"
        }
    },
    "additionalProperties": false
}
